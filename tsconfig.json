{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "allowJs": false,
        "baseUrl": ".",
        "moduleResolution": "node",
        "paths": {
            "src/*": ["src/*"],
            "assets/*": ["src/assets/*"],
            "classes*": ["src/classes/*"],
            "constants/*": ["src/constants/*"],
            "sounds/*": ["src/sounds/*"],
            "stages/*": ["src/stages/*"],
            "helper/*": ["src/helper/*"]
        }
    },
    "rules": {
        "@typescript-eslint/ban-ts-ignore": "off",
        "@typescript-eslint/ban-ts-comment": "off"
    }
}
